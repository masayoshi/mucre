<div class="row">
  <div class="span12">
    <h2><i class="icon-map-marker"></i> 会場情報</h2>
    <dl>
      <dt>会場</dt>
      <dd><%= @spot.name %></dd>
      <dt>住所</dt>
      <dd><%= @spot.address %></dd>
    </dl>
    <%= gmaps(@gmaps_options) %>
    <%= link_to "<i class='icon-edit'></i> 編集".html_safe, edit_spot_path(@spot), class: "btn" if user_signed_in? %>
    <% if @spot.events.present? %>
    <div class="page-header">
      <h4>過去のイベント一覧</h4>
    </div>
    <%= render @spot.events %>
  <% end %>
  </div>
</div>
