<header class="navbar navbar-inverse navbar-fixed-top">
<div class="navbar-inner">
  <div class="container">
    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    <%= link_to "MuseumCreated.com", root_path, class: "brand" %>
    <ul class="nav pull-right">
      <% if user_signed_in? %>
        <li><%= link_to "<i class='icon-pencil'></i> New Event".html_safe, new_event_path %></li>
        <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-cogs icon-large"></i> <span class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to image_tag(current_user.image_url, class: "img-rounded img-polaroid").html_safe + " <i class='icon-edit'></i> Edit Profile".html_safe, settings_profile_path %></li>
          <li class="divider"></li>
          <li><%= link_to "<i class='icon-th-list'></i> My Events".html_safe, events_path(username: current_user.username) %></li>
          <li class="divider"></li>
          <li><%= link_to "<i class='icon-cog'></i> Settings".html_safe, settings_account_path %></li>
          <li><%= link_to "<i class='icon-signout'></i> Sign Out".html_safe, destroy_user_session_path, method: "delete" %></li>
        </ul>
        </li>
      <% else %>
        <li<%= " class='active'".html_safe if current_page?(new_user_session_path) %>><%= link_to "<i class='icon-signin icon-large'></i> Sign in".html_safe, new_user_session_path %></li>
      <% end %>
    </ul>
    <div class="nav-collapse collapse">
      <ul class="nav">
        <li<%= ' class="active"'.html_safe if current_page?(root_path) %>>
        <%= link_to "<i class='icon-home icon-large'></i> Home".html_safe, root_path %>
        </li>
        <li<%= ' class="active"'.html_safe if current_page?(events_path) %>>
        <%= link_to "<i class='icon-calendar icon-large'></i> Events".html_safe, events_path %>
        </li>
        <li<%= ' class="active"'.html_safe if current_page?(artists_path) %>>
        <%= link_to "<i class='icon-group icon-large'></i> Artists".html_safe, artists_path %>
        </li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>
</header>
